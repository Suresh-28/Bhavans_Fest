<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#817A81"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1240dp">


        <EditText
            android:id="@+id/firstname"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:gravity="center"
            android:hint="First Name"
            android:textSize="23dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/lastname"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="216dp"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:gravity="center"
            android:hint="Last Name "
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="212dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:background="#3E008AD4"
            android:gravity="center"
            android:text=" DETAILS"
            android:textSize="23dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="184dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="461dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:background="#3E008AD4"
            android:gravity="center"
            android:text=" GENDER"
            android:textSize="24dp"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="240dp"
            android:layout_height="254dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="98dp"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="499dp"
            android:layout_marginEnd="73dp"
            android:layout_marginRight="73dp">


            <RadioButton
                android:id="@+id/female"
                android:layout_width="206dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Female"
                android:textSize="23dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/male"
                android:layout_width="213dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Male"
                android:textSize="23dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/others"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Others"
                android:textSize="23dp"
                android:textStyle="bold" />

        </RadioGroup>

        <EditText
            android:id="@+id/ednumber"
            android:layout_width="253dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="739dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:gravity="center"
            android:hint="Enter Phone Number "
            android:inputType="number"
            android:textSize="23dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edaddress"
            android:layout_width="256dp"
            android:layout_height="69dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="814dp"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:gravity="center"
            android:hint="Enter Address"
            android:textSize="23dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btdob"
            android:layout_width="76dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="364dp"
            android:layout_marginEnd="293dp"
            android:layout_marginRight="293dp"
            android:background="#3E008AD4"
            android:gravity="center"
            android:text="D.O.B"
            android:textSize="21dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edprinting"
            android:layout_width="207dp"
            android:layout_height="87dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="357dp"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            android:gravity="center"
            android:hint="printing DOB... "
            android:textSize="23dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/ednation"
            android:layout_width="231dp"
            android:layout_height="67dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="900dp"
            android:layout_marginEnd="74dp"
            android:layout_marginRight="74dp"
            android:gravity="center"
            android:hint="Enter Nation "
            android:textSize="23dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btsave"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1140dp"
            android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp"
            android:background="#3E008AD4"
            android:gravity="center"
            android:text="Register"
            android:textSize="28dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="294dp"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:textSize="23dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editpassword"
            android:layout_width="251dp"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="976dp"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:hint="Create a Password"
            android:inputType="textPassword"
            android:textSize="23dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editconfirm"
            android:layout_width="249dp"
            android:layout_height="67dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1054dp"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="76dp"
            android:gravity="center"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textSize="23dp"
            android:textStyle="bold" />

    </RelativeLayout>



</ScrollView>

